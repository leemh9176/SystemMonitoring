<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script type="text/javascript" src="javascripts/jquery.min.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="stylesheets/style.css">
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script type="text/javascript" src="javascripts/function.js"></script>
  <script type="text/javascript">
    jQuery(window).ready(function() {
      jQuery(document).width();
      var innerHeight = jQuery(document).height() - 200;
      console.log("innerHeight value : " + innerHeight);
      Resize_Iframe(innerHeight);
    });

    //iframe resize
    function Resize_Iframe(dynheight) {
      document.getElementById("chart_frame").height = parseInt(dynheight) + 20;
    }
  </script>
  <title>System Monitoring Service</title>
</head>

<body>
  <div class="container">
    <nav id="navbar" class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="">System Monitoring</a>
        </div>

      </div>
      <div class="navbar-collapse collapse" id="navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li id="nav_list_1" class="active"><a href="#os_list" onClick="call_page('os_list')">OS-List</a></li>
          <li id="nav_list_2" class=""><a href="#dashboard" onClick="call_page('dashboard')">Dashboard</a></li>
          <li id="nav_list_3" class=""><a href="#cpu_chart" onClick="call_page('cpu_chart')">CPU</a></li>
          <li id="nav_list_4" class=""><a href="#cpu_core_chart" onClick="call_page('cpu_core_chart')">CPU Core</a></li>
          <li id="nav_list_5" class=""><a href="#memory_chart" onClick="call_page('memory_chart')">Memory</a></li>
          <li id="nav_list_6" class=""><a href="#processes_chart" onClick="call_page('processes_chart')">Processes</a></li>
          <li id="nav_list_7" class=""><a href="#setting" onClick="call_page('setting')">Setting</a></li>
          <li id="nav_list_8" class=""><a href="./download" >download</a></li>
        </ul>
      </div>
    </nav>
    <iframe class="chart_iframe" id="chart_frame" src="" width="100%" scrolling="no" frameborder="0">

    </iframe>
    <script type="text/javascript">
      window.onload = function() {
        var params = document.location.href.split("#");
        var page_name;
        if(params[1] == null) page_name = "os_list";
        else page_name = params[1];
        console.log(page_name);
        for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
        if(page_name == "os_list") {document.getElementById("nav_list_1").className = "active";}
        else if(page_name == "dashboard") {document.getElementById("nav_list_2").className = "active";}
        else if(page_name == "cpu_chart") {document.getElementById("nav_list_3").className = "active";}
        else if(page_name == "cpu_core_chart") {document.getElementById("nav_list_4").className = "active";}
        else if(page_name == "memory_chart") {document.getElementById("nav_list_5").className = "active";}
        else if(page_name == "processes_chart") {document.getElementById("nav_list_6").className = "active";}
        call_page(page_name);
      }
      function call_page(page_name) {
        if(page_name == "os_list") {
          document.getElementById('chart_frame').src = "/os_list";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_1").className = "active";
        }
        else if(page_name == "dashboard") {
          document.getElementById('chart_frame').src = "/dashboard";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_2").className = "active";
        }
        else if(page_name == "cpu_chart") {
          document.getElementById('chart_frame').src = "/cpu_chart";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_3").className = "active";
        }
        else if(page_name == "cpu_core_chart") {
          document.getElementById('chart_frame').src = "/cpu_core_chart";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_4").className = "active";
        }
        else if(page_name == "memory_chart") {
          document.getElementById('chart_frame').src = "/memory_chart";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_5").className = "active";
        }
        else if(page_name == "processes_chart") {
          document.getElementById('chart_frame').src = "/processes_chart";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_6").className = "active";
        }
        else if(page_name == "setting") {
          document.getElementById('chart_frame').src = "/setting";
          for(var i = 1; i <= 8; i++) document.getElementById("nav_list_" + i).className = "";
          document.getElementById("nav_list_7").className = "active";
        }
      }
    </script>
  </div>
</body>

</html>
